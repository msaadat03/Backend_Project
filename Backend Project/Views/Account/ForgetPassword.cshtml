@model ForgetPasswordVM

@{
    ViewData["Title"] = "Forget Password";
}

<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Forget Password?</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
                <!-- Login Content Start -->
                <div class="col-lg-6">
                    <div class="login-reg-form-wrap">
                        <h2>Please, write your email</h2>
                        <form asp-controller="Account" asp-action="ForgetPassword" method="post" enctype="multipart/form-data">
                            <div class="single-input-item">
                                <input placeholder="Email" asp-for="Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="single-input-item">
                                <button class="btn">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Login Content End -->
            </div>
        </div>
    </div>
</div>
<!-- login register wrapper end -->

