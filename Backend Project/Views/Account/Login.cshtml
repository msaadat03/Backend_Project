@model LoginVM

@{ 
    ViewData["Title"] = "Login"; 
    }

<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
                <!-- Login Content Start -->
                <div class="col-lg-6">
                    <div class="login-reg-form-wrap">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <h2>Sign In</h2>
                        <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data">
                            <div class="single-input-item">
                                <input placeholder="Email or Username" asp-for="UsernameOrEmail" />
                                <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                            </div>
                            <div class="single-input-item">
                                <input placeholder="Enter your Password" asp-for="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                    <a asp-controller="Account" asp-action="ForgetPassword" class="forget-pwd">Forget Password?</a>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <button class="btn">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Login Content End -->
            </div>
        </div>
    </div>
</div>
<!-- login register wrapper end -->

